# ASOOS Docker Build Environment Configuration
# Copy this to .env for local development

# Build Configuration
TARGET_ENV=production
SERVICE_VERSION=1.0.0
DOCKER_REGISTRY=docker.io/asoos
PLATFORMS=linux/amd64,linux/arm64

# BuildKit Configuration
DOCKER_BUILDKIT=1
BUILDKIT_PROGRESS=plain
BUILDKIT_HOST=docker-container://asoos-builder

# Secret Management
BUILD_SECRETS_FILE=.secrets/build_secrets
RUNTIME_SECRETS_FILE=.secrets/runtime_secrets

# Registry Authentication
DOCKER_USERNAME=
DOCKER_PASSWORD=
DOCKER_TOKEN=

# GCP Configuration for secret injection
GCP_PROJECT_ID=859242575175
GCP_REGION=us-west1
GOOGLE_APPLICATION_CREDENTIALS=

# MCP Configuration
MCP_SERVER_URL=https://integration-gateway-mcp-yutylytffa-uw.a.run.app
MCP_CLIENT_ID=
MCP_CLIENT_SECRET=

# Service-specific overrides
INTEGRATION_GATEWAY_PORT=8080
ORCHESTRATOR_PORT=8081
DR_CLAUDE_PORT=8082
VOICE_MANAGER_PORT=8083
VICTORY36_PORT=8084

# Resource limits
MEMORY_LIMIT=512Mi
CPU_LIMIT=500m

# Networking
DOCKER_NETWORK=asoos-network
SUBNET=172.20.0.0/16

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health check configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=5s

# Security
USER_ID=1001
GROUP_ID=1001
RUN_AS_NON_ROOT=true
