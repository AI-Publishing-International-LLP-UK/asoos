{
  "name": "mining-pool-audit",
  "version": "1.0.0",
  "description": "Mining pool balance and payout audit system with on-chain verification",
  "main": "dist/cli.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "audit:pools": "npm run dev -- --pools nicehash,slushpool",
    "audit:full": "npm run dev -- --pools nicehash,slushpool --chain-check --verbose"
  },
  "bin": {
    "mining-audit": "./dist/cli.js"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^5.6.0",
    "winston": "^3.11.0",
    "commander": "^11.1.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "yaml": "^2.3.4",
    "openid-client": "^5.6.1",
    "jose": "^5.1.3",
    "node-oauth2-server": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "mining",
    "blockchain",
    "audit",
    "nicehash",
    "slushpool",
    "bitcoin",
    "cryptocurrency"
  ],
  "author": "Einstein Wells Division",
  "license": "MIT"
}