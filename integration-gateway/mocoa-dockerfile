# MOCOA PRODUCTION INTERFACE - CLOUD RUN DOCKERFILE
# Optimized for serving the MOCOA Owner Interface
# Victory36 French accent voice configuration included
# Authentication via sallyport.2100.cool

FROM nginx:alpine

# Copy MOCOA interface files
COPY mocoa-current.html /usr/share/nginx/html/index.html
COPY index.html /usr/share/nginx/html/landing.html
COPY enhanced-wfa-mcp-integration.js /usr/share/nginx/html/
COPY ufo-mcp-integration.js /usr/share/nginx/html/

# Create nginx configuration for proper routing
RUN echo 'server {' > /etc/nginx/conf.d/default.conf && \
    echo '    listen 8080;' >> /etc/nginx/conf.d/default.conf && \
    echo '    server_name _;' >> /etc/nginx/conf.d/default.conf && \
    echo '    location / {' >> /etc/nginx/conf.d/default.conf && \
    echo '        root /usr/share/nginx/html;' >> /etc/nginx/conf.d/default.conf && \
    echo '        index index.html;' >> /etc/nginx/conf.d/default.conf && \
    echo '        try_files $uri $uri/ /index.html;' >> /etc/nginx/conf.d/default.conf && \
    echo '    }' >> /etc/nginx/conf.d/default.conf && \
    echo '    location /health {' >> /etc/nginx/conf.d/default.conf && \
    echo '        return 200 "OK";' >> /etc/nginx/conf.d/default.conf && \
    echo '        add_header Content-Type text/plain;' >> /etc/nginx/conf.d/default.conf && \
    echo '    }' >> /etc/nginx/conf.d/default.conf && \
    echo '}' >> /etc/nginx/conf.d/default.conf

# Environment variables
ENV PORT=8080
ENV INTERFACE_VERSION=v99
ENV VOICE_CONFIG=victory36-french-accent-45
ENV AUTH_ENDPOINT=https://sallyport.2100.cool

# Expose port
EXPOSE 8080

# Labels for metadata
LABEL maintainer="AI Publishing International LLP"
LABEL version="v99"
LABEL description="MOCOA Owner Interface Production"
LABEL voice_config="victory36-french-accent-45"
LABEL auth_endpoint="https://sallyport.2100.cool"

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
